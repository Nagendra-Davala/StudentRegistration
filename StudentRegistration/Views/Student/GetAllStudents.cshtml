@model IEnumerable<StudentRegistration.Models.StudentModel>
@{
    Layout = "_StudentLayout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllStudents</title>
</head>
<body>
    <form method="post" asp-action="Search">
        <div class="row">
            <div class="col-md-3">
                <input type="search" name="fname" placeholder="First Name" class="form-control" />
            </div>
            <div class="col-md-3">
                <input type="search" name="email" placeholder="Email" class="form-control" />
            </div>
            <div class="col-md-3">
                <input type="search" name="company" placeholder="company" class="form-control" />
            </div>
            <div class="col-md-3 ">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>

        </div>
    </form> <br />
    <table class="table" border="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses)
                </th>
                <th>
                    <h6>Actions</h6>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courses)
                </td>

                <td>
                    <a asp-action="GetStudent" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
}
        </tbody>
    </table>
    <div class="row">
        <div class="offset-md-9">
            <p>
                <a asp-action="StudentForm" class="btn btn-primary">Create New</a>
            </p>
        </div>
    </div>
</body>
</html>
